<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="315dp"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:gravity="center"
    >

    <TextView
        android:id="@+id/popup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Título do Popup"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        />

    <Button
        android:id="@+id/popup_btn_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opção 1"
        android:backgroundTint="@color/cor_primaria"
        style="@style/botao"
        />

    <Button
        android:id="@+id/popup_btn_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/cor_primaria"
        android:text="Opção 2"
        style="@style/botao"
        />

    <Button
        android:id="@+id/popup_btn_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/cor_primaria"
        android:text="Opção 3"
        style="@style/botao"
        />
</LinearLayout>
