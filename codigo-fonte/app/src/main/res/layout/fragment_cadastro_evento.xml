<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_cadastro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".view.pessoa.CadastroPessoa">


    <!-- INPUTS -->
    <include layout="@layout/inputs_evento">

    </include>

    <!-- LIST VIEW COM CHECKBOX -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lbl"
                style="@style/txt_legenda"
                android:layout_marginHorizontal="50dp"
                android:layout_marginBottom="20dp"
                android:text="@string/str_palestrantes" />

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background">

                <ListView
                    android:id="@+id/listViewSugestao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txtNovoPalestrante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/ic_add"
                android:drawablePadding="2dp"
                android:text="Novo Palestrante"
                style="@style/txt_legenda"
                android:clickable="true"/>

            <!--
            <Button
                android:id="@+id/btnNovoPalestrante"
                style="@style/botao_transparente"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/ic_add"
                android:drawablePadding="2dp"
                android:text="Novo Palestrante" /> -->

        </LinearLayout>
    </ScrollView>

    <!-- BotÃ£o Cadastrar Evento-->
    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <Button
        android:id="@+id/btnCadastrar"
        style="@style/botao"
        android:backgroundTint="@color/cor_secundaria"
        android:text="@string/str_btn_cadastrar" />

</LinearLayout>