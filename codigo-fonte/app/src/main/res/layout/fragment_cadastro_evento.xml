<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_cadastro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="br.edu.fatec.controlepresenca.view.evento.CadastroEvento">


    <!-- INPUTS -->
    <include layout="@layout/inputs_evento">

    </include>

    <!-- LIST VIEW COM CHECKBOX -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:id="@+id/lbl"
                style="@style/txt_legenda"
                android:text="@string/str_palestrantes" />

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background">

                <ListView
                    android:id="@+id/listViewSugestao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txtNovoPalestrante"
                android:text="Novo palestrante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_add"
                android:drawablePadding="2dp"
                android:clickable="true"
                android:layout_marginTop="10dp"
                style="@style/txt_legenda"
                />

            <!--
            <Button
                android:id="@+id/btnNovoPalestrante"
                style="@style/botao_transparente"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/ic_add"
                android:drawablePadding="2dp"
                android:text="Novo Palestrante" /> -->

        </LinearLayout>
    </ScrollView>

    <!-- BotÃ£o Cadastrar Evento-->

    <Button
        android:id="@+id/btnCadastrar"
        android:text="@string/str_btn_cadastrar"
        android:layout_marginTop="30dp"
        style="@style/botao"/>

</LinearLayout>