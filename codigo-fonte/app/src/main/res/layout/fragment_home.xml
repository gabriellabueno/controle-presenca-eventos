<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.edu.fatec.controlepresenca.view.Home">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="30dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtSaudeEmDia"
                    android:text="@string/app_name"
                    android:layout_marginVertical="25dp"
                    android:fontFamily="@font/aboreto"
                    android:textColor="@color/cor_primaria"
                    android:textSize="40sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imgHome"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/ic_home" />

                <TextView
                    android:id="@+id/txtSaudação"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\nBem-vindo(a)!"
                    android:textAlignment="textStart"
                    android:textSize="15sp"
                    android:layout_marginVertical="20dp"
                    />

                <TextView
                    android:id="@+id/txtIntroducao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:justificationMode="inter_word"
                    android:textAlignment="textStart"
                    android:textSize="15sp"
                    android:text="Texto introdução ao app"
                    />

                <Button
                    android:id="@+id/btnComecar"
                    android:text="Começar"
                    android:layout_marginTop="30dp"
                    style="@style/botao"
                    />
            </LinearLayout>
        </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>