<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_manutencao"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="br.edu.fatec.controlepresenca.view.palestrante.ManutencaoPalestrante">


    <!-- INPUTS -->
    <include layout="@layout/inputs_palestrante">

    </include>

    <!-- BOTÕES -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <!-- Botão Atualizar -->
        <Button
            android:id="@+id/btnAtualizar"
            style="@style/botao"
            android:text="@string/str_btn_atualizar" />

        <Space
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <!-- Botão Excluir -->
        <Button
            android:id="@+id/btnExcluir"
            style="@style/botao"
            android:text="@string/str_btn_excluir" />
    </LinearLayout>


</LinearLayout>