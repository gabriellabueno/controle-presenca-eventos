<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:style="http://schemas.android.com/apk/res-auto"
    tools:context=".view.CheckinParticipante">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="40dp" />

        <!-- BOTÃO PARA LER QR CODE -->
        <Button
            android:id="@+id/btnLerQrCode"
            android:layout_gravity="center"
            style="@style/botao"
            android:text="Ler QR code" />

        <!-- INPUTS A SEREM PREENCHIDOS COM QR CODE -->
        <include layout="@layout/inputs_participante">

        </include>

        <!-- BOTÃO PARA REGISTRAR PRESENÇA APÓS PREENCHER INPUTS -->
        <Button
            android:id="@+id/btnPresenca"
            android:layout_gravity="center"
            style="@style/botao"
            android:text="Registrar Presença" />

    </LinearLayout>

</FrameLayout>